h1 Search people, tweets, links, photos...
#searchForm
  form(action='#{searchPath}', method='get')
    select.typeSelector(name='type', id='searchtype')
        option(value='') Search all types
        option(value='contact/full*') Search only people
        option(value='photo/full*') Search only photos
        option(value='timeline/twitter*') Search only tweets
    input.text(type='text', id='searchterm', name='searchterm', size='48', value='#{term}')
    #searchButton
      .button.clb
        a#searchButton(href='#') Search
  .clb
