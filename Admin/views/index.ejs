<!DOCTYPE html>
<html>
  <head>
    <title>CareBear OAuth2 Example</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
  </head>
  <body>
    <h1>Singly Developers</h1>
    <ul>
      <li><a href="#" id="signin">Login</a></li>
      <li><a href="/logout">Logout</a></li>
      <li><a href="#" id="signup">Sign-up for a Developer Account</a></li>
    </ul>

    <script src="<%= hostUrl %>/static/auth/auth.js"></script>
    <script>
      $(function() {
        var singly = $.singly({
          appName: 'Care Bear Stare',
          client_id: '<%= client_id %>',
          redirect_url: window.location.origin + '/callback',
          host: '<%= hostUrl %>',
          services: ['twitter', 'facebook']
        });

        $('#signin, #signup').on("click", singly.login);

        singly.on("login", function(e) {
          $('#singly_loggedin').html('True');
          $.ajax({
            url: '/user',
            success: function(data){
              var user = JSON.parse(data);
              $('#singly_token').val(user.token);
              $('#singly_profiles').html(user.profiles.all.join(','));
            },
            error: function(){}
          });
        });
      });
    </script>
  </body>
</html>
