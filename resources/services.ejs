{
  "apiVersion": "1",
  "swaggerVersion": "1.1",
  "basePath": "<%= process.env.URL %>",
  "resourcePath": "/services",

  "apis": [
  <% var sortedServices = Object.keys(services).sort();
  var len = sortedServices.length;
  for (c = 0; c < len; c++) {
    var key = sortedServices[c];
    if (services.hasOwnProperty(key)) { %>
    {
      "path":"/services/<%= key %>/{endpoint}",
      "description":"<%= services[key].name %>",
      "operations":[
        {
          "httpMethod":"GET",
          "nickname":"<%= key %>",
          "parameters":[
            {
              "name": "endpoint",
              "description": "Name of the endpoint from which to fetch data",
              "paramType": "path",
              "required": true,
              "allowMultiple": false,
              "dataType": "string",
              "allowableValues":{
                "valueType":"LIST",
                "values":[
                  <%
                  var list = [];
                  var synclets = services[key].synclets;
                  for (var i=0; i<synclets.length; i++) list.push('"'+synclets[i].name+'"');
                  %>
                  <%- list.join(',') %>
                ]
              }
            },
            <%- partial('params') %>,
            {
              "name": "access_token",
              "description": "A Singly access_token",
              "paramType": "query",
              "required": true,
              "allowMultiple": false,
              "dataType": "string"
            }
          ],
          "summary":"<%= services[key].desc %>"
        }
      ]
    },
  <% }
  } %>
    {
      "path":"/services",
      "description":"list available services",
      "operations":[
        {
          "httpMethod":"GET",
          "nickname":"services",
          "parameters":[
          ],
          "summary":"Get Available services"
        }
      ]
    }
  ]
}