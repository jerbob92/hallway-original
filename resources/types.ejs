{
  "apiVersion": "1",
  "swaggerVersion": "1.1",
  "basePath": "<%- host %>",
  "resourcePath": "/types",

  "apis": [
  <% types = types.sort();
  for (var i=0; i<types.length; i++) { %>
    {
      "path":"/types/<%= types[i] %>",
      "description":"<%= types[i] %> data type",
      "operations":[
        {
          "httpMethod":"GET",
          "nickname":"<%= types[i] %>",
          "parameters":[
            <%- partial('params') %>,
            {
              "name": "access_token",
              "description": "A Singly access_token",
              "paramType": "query",
              "required": true,
              "allowMultiple": false,
              "dataType": "string"
            }
          ],
          "summary":"Return all <%= types[i] %>"
        }
      ]
    },
    <% if (post[types[i]]) { %>
    {
      "path":"/types/<%= types[i] %>",
      "description":"<%= types[i] %> data type",
      "operations":[
        {
          "httpMethod":"POST",
          "nickname":"<%= types[i] %>",
          "parameters":[
            {
              "name": "access_token",
              "description": "A Singly access_token",
              "paramType": "query",
              "required": true,
              "allowMultiple": false,
              "dataType": "string"
            },
            {
              "name": "services",
              "description": "A comma separated list of services (see docs for what is supported)",
              "paramType": "query",
              "required": true,
              "allowMultiple": true,
              "dataType": "string"
            },
            <% var params = post[types[i]];
            var paramIndex = 0;
            for (var paramName in params) {
              if (params.hasOwnProperty(paramName)) { %>
              {
                "name": "<%= paramName %>",
                "description": "<%= params[paramName][1] %>",
                "paramType": "<%= params[paramName][0] %>",
                "required": true,
                "allowMultiple": true,
                "dataType": "string"
              }
              <% if (++paramIndex < Object.keys(params).length) { %>
                ,
              <% } %>
            <% }
            } %>
          ],
          "summary":"Post to <%= types[i] %>"
        }
      ]
    },
    <% } %>
      <% } %>
    {
      "path":"/types",
      "description":"list available types",
      "operations":[
        {
          "httpMethod":"GET",
          "nickname":"types",
          "parameters":[
          ],
          "summary":"Get Available Types"
        }
      ]
    }
  ]
}
