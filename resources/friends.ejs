{
  "apiVersion": "1",
  "swaggerVersion": "1.1",
  "basePath": "https://api.singly.com",
  "resourcePath": "/friends",

  "apis": [
    {
      "path":"/friends",
      "description":"breakdown numbers of friends by group",
      "operations":[
        {
          "httpMethod":"GET",
          "nickname":"profiles",
          "parameters":[
            {
              "name": "access_token",
              "description": "A Singly access_token",
              "paramType": "query",
              "required": true,
              "allowMultiple": false,
              "dataType": "string"
            }
          ],
          "summary":"breakdown numbers of friends by group"
        }
      ]
    },
    {
      "path":"/friends/{service}",
      "description":"Returns the user's friends (by service)",
      "operations":[

        {
          "httpMethod":"GET",
          "nickname":"friends_service",
          "parameters":[
            {
              "name": "service",
              "description": "The service to return friends from",
              "paramType": "path",
              "required": true,
              "allowMultiple": false,
              "dataType": "string",
              "allowableValues":{
                "valueType":"LIST",
                "values":[
                  "all",
                  "facebook",
                  "twitter",
                  "linkedin",
                  "gcontacts",
                  "mobile",
                  "instagram",
                  "foursquare",
                  "github",
                  "tumblr",
                  "flickr",
                  "yammer",
                  "klout"
                ]
              }
            },
            <%- partial('friends-params') %>,
            {
              "name": "access_token",
              "description": "A Singly access_token",
              "paramType": "query",
              "required": true,
              "allowMultiple": false,
              "dataType": "string"
            }
          ],
          "summary":"Returns the user's friends (by service)"
        }
      ]
    },
    {
      "path":"/friends/{group}",
      "description":"Returns the user's friends (by group)",
      "operations":[

        {
          "httpMethod":"GET",
          "nickname":"friends_group",
          "parameters":[
            {
              "name": "group",
              "description": "The group to return friends from",
              "paramType": "path",
              "required": true,
              "allowMultiple": false,
              "dataType": "string",
              "allowableValues":{
                "valueType":"LIST",
                "values":[
                  "all",
                  "peers",
                  "ios",
                  "android"
                ]
              }
            },
            <%- partial('friends-params') %>,
            {
              "name": "access_token",
              "description": "A Singly access_token",
              "paramType": "query",
              "required": true,
              "allowMultiple": false,
              "dataType": "string"
            }
          ],
          "summary":"Returns the user's friends (by group). 'Peers' is friends using the app."
        }
      ]
    }
  ]
}